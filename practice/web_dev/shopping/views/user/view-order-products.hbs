<section style="background-color: #eee;">
    {{#each amount}}
    <div class="card ">
        <div class="card-body d-flex justify-content-left total font-weight-bold">
           <h5> Order Id :  {{this.orderId}} </h5>
        </div>
    </div>
    {{/each}}
    <div class="container py-5">
        <div class="row justify-content-center">
            {{#each products}}
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card text-black">

                    <img src="/product-images/{{this.product._id}}.png" class="card-img-top mx-auto d-block mt-2"
                        alt="Apple Computer" style="height: 15rem;width:15rem;" />
                    <div class="card-body">
                        <div class="text-center">
                            <h5 class="card-title">{{this.product.name}}</h5>
                            <p class="text-muted mb-4">{{this.product.description}}</p>
                        </div>
                        <div>
                            <div class="d-flex justify-content-between">
                                <span>{{this.product.name}}</span><span>₹{{this.product.price}}</span>
                            </div>

                            <h6>Quantity - {{this.quantity}}</h6>
                        </div>
                        {{!-- <div class="d-flex justify-content-between total font-weight-bold mt-4">
                            <span>Total</span><span>₹{{this.product.price}}</span>
                        </div> --}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{#each amount}}
    <div class="card ">
        <div class="card-body d-flex justify-content-center total font-weight-bold">
           <h4> Total Amount :  ₹{{this.totalAmount}} </h4>
        </div>
    </div>
    {{/each}}
</section>